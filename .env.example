# StudyPal Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key (Required for chatbot)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Tavily API Key (Optional - for web search functionality)
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Hugging Face Tokens (Optional - for advanced image generation)
# Get from: https://huggingface.co/settings/tokens
HF_TOKENS=your_huggingface_token_here

# Backend Port Configuration
BACKEND_PORT=8012

# Development Settings
DEBUG=True
ENVIRONMENT=development